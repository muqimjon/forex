<UserControl
    x:Class="Forex.Wpf.Resources.UserControls.FloatingComboBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="30"
    d:DesignHeight="32"
    d:DesignWidth="100"
    mc:Ignorable="d">

    <Grid>
        <!--  Floating label  -->
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="14"
            Foreground="{DynamicResource PrimaryTextColor}"
            Style="{StaticResource FloatingLabelStyle}"
            Tag="{Binding ElementName=comboBox}"
            Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <!--  Inner ComboBox bound to the UserControl dependency properties  -->
        <Border
            Height="30"
            Padding="5,0"
            VerticalAlignment="Bottom"
            BorderBrush="{DynamicResource PrimaryTextColor}"
            BorderThickness="1"
            CornerRadius="4">

            <ComboBox
                x:Name="comboBox"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                DisplayMemberPath="{Binding DisplayMemberPath, RelativeSource={RelativeSource AncestorType=UserControl}}"
                DropDownOpened="ComboBox_DropDownOpened"
                FontSize="14"
                IsTextSearchEnabled="{Binding IsTextSearchEnabled, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                LostFocus="ComboBox_LostFocus"
                IsEditable="{Binding IsEditable, RelativeSource={RelativeSource AncestorType=UserControl}}"
                SelectedItem="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=UserControl}}"
                SelectedValue="{Binding SelectedValue, RelativeSource={RelativeSource AncestorType=UserControl}}"
                SelectedValuePath="{Binding SelectedValuePath, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" />
        </Border>
    </Grid>
</UserControl>
