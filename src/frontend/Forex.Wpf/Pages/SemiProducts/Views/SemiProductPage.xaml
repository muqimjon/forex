<Page x:Name="RootPage"
      x:Class="Forex.Wpf.Pages.SemiProducts.Views.SemiProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
      mc:Ignorable="d"
      Title="Kirim qilish"
      d:DesignHeight="580"
      d:DesignWidth="810">

    <Page.Resources>
        <!-- Input TextBox Style -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF5252"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Background="{StaticResource PrimaryBackground}" CornerRadius="4">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Back Button -->
            <Button HorizontalAlignment="Right"
                    md:ButtonAssist.CornerRadius="5"
                    Background="{DynamicResource OtherBackground}"
                    BorderThickness="0"
                    Click="BtnBack_Click"
                    Content="🔙 Orqaga"
                    ToolTip="Orqaga" />

            <!-- Invoice Header -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Sana -->
                <TextBlock Text="Sana:" FontSize="14" VerticalAlignment="Center" Margin="5"/>
                <controls:UserCalendar Grid.Column="1" Width="120" Height="28" Margin="5"
                                       FontSize="14" SelectedDate="{Binding Invoice.Date, Mode=TwoWay}" />

                <!-- Invoys raqami -->
                <TextBlock Grid.Row="1" Text="Invoice raqami:" FontSize="14" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="1" Grid.Row="1" Width="120" Margin="5" Style="{StaticResource InputTextBoxStyle}"
                         Text="{Binding Invoice.Number, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Tan narxi -->
                <TextBlock Grid.Column="2" Text="Tan narxi:" FontSize="14" VerticalAlignment="Center" Margin="5"/>
                <Border Grid.Column="3" CornerRadius="4" BorderBrush="Black" BorderThickness="1" Margin="5" Width="120"  Padding="8,4">
                <TextBlock TextAlignment="Right" VerticalAlignment="Center" 
                           Text="{Binding Invoice.CostPrice, StringFormat={}{0:N0}}" />
                </Border>

                <!-- Yo'l xarajati -->
                <TextBlock Grid.Row="1" Grid.Column="2" Text="*Yo'l xarajati:" FontSize="14" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="3" Grid.Row="1" Width="120" Margin="5" Style="{StaticResource InputTextBoxStyle}"
                         PreviewTextInput="NumericTextBox_PreviewTextInput"
                         Text="{Binding Invoice.CostDelivery, StringFormat={}{0:N0}, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" />

                <!-- Ta'minotchi -->
                <TextBlock Grid.Column="4" Text="Ta'minotchi:" FontSize="14" VerticalAlignment="Center" Margin="5"/>
                <Border Grid.Column="5" Width="150" Margin="5" Height="28" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Padding="8 0">
                <ComboBox  FontSize="14" BorderThickness="0"
                          DisplayMemberPath="Name" ItemsSource="{Binding AvailableSuppliers}"
                          SelectedItem="{Binding Invoice.PaymentToSupplier.User}" />
                </Border>

                <!-- Vositachi orqali ekanligini aniqlash -->
                <TextBlock Grid.Row="1" Grid.Column="4" Text="Vositachi orqali:" FontSize="14" VerticalAlignment="Center" Margin="5"/>
                <ToggleButton Grid.Row="1" Grid.Column="5" Margin="5" VerticalAlignment="Center"
                              IsChecked="{Binding Invoice.ViaConsolidator, Mode=TwoWay}" />

                <!-- Vositachi -->
                <TextBlock Grid.Column="6" Text="Vositachi:" FontSize="14" VerticalAlignment="Center" Margin="5"
                           Visibility="{Binding Invoice.ViaConsolidator, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Border Grid.Column="7" Width="150" Margin="5" Height="28" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Padding="8 0"
                        Visibility="{Binding Invoice.ViaConsolidator, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ComboBox FontSize="14" BorderThickness="0" DisplayMemberPath="Name" 
                              ItemsSource="{Binding AvailableConsolidators}" SelectedItem="{Binding Invoice.PaymentToConsolidator.User}"/>
                </Border>

                <!-- Kontiner soni -->
                <TextBlock Grid.Row="1" Grid.Column="6" Text="*Kontiner soni:" FontSize="14" VerticalAlignment="Center" Margin="5"
                           Visibility="{Binding Invoice.ViaConsolidator, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <TextBox Grid.Row="1" Grid.Column="7" Width="120" Margin="5" Style="{StaticResource InputTextBoxStyle}"
                         PreviewTextInput="NumericTextBox_PreviewTextInput"
                         Text="{Binding Invoice.ContainerCount, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                         Visibility="{Binding Invoice.ViaConsolidator, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Dona kontiner uchun to'lov -->
                <TextBlock Grid.Column="8" Text="*Dona kon. u-n to'lov:" FontSize="14" VerticalAlignment="Center" Margin="5"
                           Visibility="{Binding Invoice.ViaConsolidator, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <TextBox Grid.Column="9" Width="120" Margin="5" Style="{StaticResource InputTextBoxStyle}"
                         PreviewTextInput="NumericTextBox_PreviewTextInput"
                         Text="{Binding Invoice.PricePerUnitContainer, StringFormat={}{0:N0}, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                         Visibility="{Binding Invoice.ViaConsolidator, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Tanlangan valyuta ayirboshlash qiymati (so'mga nisbatan) -->
                <TextBlock Grid.Row="1" Grid.Column="8" Text="*Kursi:" FontSize="14" VerticalAlignment="Center" Margin="5"
                           Visibility="{Binding Invoice.ViaConsolidator, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <TextBox Grid.Row="1" Grid.Column="9" Width="120" Margin="5" Style="{StaticResource InputTextBoxStyle}"
                         PreviewTextInput="NumericTextBox_PreviewTextInput"
                         Text="{Binding Invoice.PaymentToConsolidator.ExchangeRate, StringFormat={}{0:N0}, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                         Visibility="{Binding Invoice.ViaConsolidator, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>

            <!-- Products List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Products}" Margin="5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="1" 
                                    CornerRadius="4" Margin="0,0,0,10" Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Product Header -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Image -->
                                        <Button Height="100" Width="100" Margin="5"
                                                Command="{Binding SelectImageCommand}">
                                            <Button.Background>
                                                <ImageBrush ImageSource="{Binding Image, Converter={StaticResource ImageFallbackConverter}}"
                                                           Stretch="UniformToFill" />
                                            </Button.Background>
                                        </Button>

                                        <!-- Code -->
                                        <StackPanel Grid.Column="1" Margin="5" VerticalAlignment="Center">
                                            <TextBlock Text="Kodi:" FontSize="12" Foreground="#666"/>
                                            <TextBox Style="{StaticResource InputTextBoxStyle}"
                                                     Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" />
                                        </StackPanel>

                                        <!-- Name -->
                                        <StackPanel Grid.Column="3" Margin="5" VerticalAlignment="Center">
                                            <TextBlock Text="Nomi:" FontSize="12" Foreground="#666"/>
                                            <TextBox Style="{StaticResource InputTextBoxStyle}"
                                                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                        </StackPanel>

                                        <!-- Delete Product Button -->
                                        <Button Grid.Column="7" Style="{StaticResource DeleteButtonStyle}"
                                                Content="×" ToolTip="Mahsulotni o'chirish"
                                                VerticalAlignment="Top"
                                                Command="{Binding DataContext.RemoveProductCommand, ElementName=RootPage}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>

                                    <!-- Product Types -->
                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ProductTypes}" Margin="10,10,0,10">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" 
                                                        CornerRadius="3" Margin="0,0,0,8" Padding="8">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Type Header -->
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Text="O'lchami:" FontSize="12" Foreground="#666" 
                                                                      VerticalAlignment="Center" Margin="5"/>
                                                            <TextBox Grid.Column="1" Style="{StaticResource InputTextBoxStyle}" Margin="5"
                                                                     Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                                                                     ToolTip="Misol: 24-29, 30-35" />

                                                            <!-- Delete Type Button -->
                                                            <Button Grid.Column="3" Style="{StaticResource DeleteButtonStyle}"
                                                                    Content="×" ToolTip="O'lchamni o'chirish" Margin="5"
                                                                    Command="{Binding DataContext.RemoveProductTypeCommand, ElementName=RootPage}">
                                                                <Button.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource ArrayMultiValueConverter}">
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=Border, AncestorLevel=2}"/>
                                                                        <Binding/>
                                                                    </MultiBinding>
                                                                </Button.CommandParameter>
                                                            </Button>
                                                        </Grid>

                                                        <!-- Type Items -->
                                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5,0,0">
                                                            <TextBlock Text="Nomi" Width="152"/>
                                                            <TextBlock Text="Soni" Width="102"/>
                                                            <TextBlock Text="O'lchov birligi" Width="152"/>
                                                            <TextBlock Text="Tan narxi" Width="122"/>
                                                            <TextBlock Text="Jami narxi" Width="122"/>
                                                        </StackPanel>

                                                        <ItemsControl  Grid.Row="2" ItemsSource="{Binding ProductTypeItems}" Margin="10,5,0,0">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid Margin="0,0,0,5">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="150"/>
                                                                            <ColumnDefinition Width="100"/>
                                                                            <ColumnDefinition Width="150"/>
                                                                            <ColumnDefinition Width="120"/>
                                                                            <ColumnDefinition Width="120"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <!-- Nome -->
                                                                        <TextBox Style="{StaticResource InputTextBoxStyle}" Margin="2"
                                                                                 Text="{Binding SemiProduct.Name, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                                                                 ToolTip="Nomi" />
                                                                        
                                                                        <!-- Quantity -->
                                                                        <TextBox Grid.Column="1" Style="{StaticResource InputTextBoxStyle}" Margin="2"
                                                                                 PreviewTextInput="NumericTextBox_PreviewTextInput"
                                                                                 Text="{Binding SemiProduct.Quantity, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                                                                 ToolTip="Soni" />

                                                                        <!-- Unit Measure -->
                                                                        <Border Grid.Column="2" Margin="2" Height="31" BorderBrush="LightGray" BorderThickness="1" Padding="10 0">
                                                                            <ComboBox FontSize="14" BorderThickness="0"
                                                                                  DisplayMemberPath="Name"
                                                                                  ItemsSource="{Binding DataContext.AvailableUnitMeasures, ElementName=RootPage}"
                                                                                  SelectedItem="{Binding SemiProduct.UnitMeasure}"
                                                                                  ToolTip="O'lchov birligi" />
                                                                        </Border>

                                                                        <!-- Cost Price -->
                                                                        <TextBox Grid.Column="3" Margin="2" Padding="8,4" Style="{StaticResource InputTextBoxStyle}"
                                                                                 PreviewTextInput="NumericTextBox_PreviewTextInput"
                                                                                 Text="{Binding SemiProduct.CostPrice, StringFormat={}{0:N2}, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                                                                 ToolTip="Bir maxsulot narxi" />

                                                                        <!-- Total Amount -->
                                                                        <TextBlock Grid.Column="4" Margin="2" Padding="8,4"
                                                                                  Background="#E8F5E9" TextAlignment="Right"
                                                                                  VerticalAlignment="Center" FontWeight="Bold"
                                                                                  Text="{Binding SemiProduct.TotalAmount, StringFormat={}{0:N2}}"
                                                                                  ToolTip="Jami summa" />

                                                                        <!-- Delete Item Button -->
                                                                        <Button Grid.Column="6" Style="{StaticResource DeleteButtonStyle}"
                                                                                Content="×" ToolTip="Elementni o'chirish" Margin="2"
                                                                                Command="{Binding DataContext.RemoveProductTypeItemCommand, ElementName=RootPage}">
                                                                            <Button.CommandParameter>
                                                                                <MultiBinding Converter="{StaticResource ArrayMultiValueConverter}">
                                                                                    <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=Border, AncestorLevel=2}"/>
                                                                                    <Binding/>
                                                                                </MultiBinding>
                                                                            </Button.CommandParameter>
                                                                        </Button>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <Grid Grid.Row="3" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Total -->
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="10,5">
                    <TextBlock FontWeight="Bold" FontSize="18" Text="Jami: " VerticalAlignment="Center"/>
                    <TextBlock FontWeight="Bold" FontSize="18" VerticalAlignment="Center"
                               Text="{Binding Invoice.TotalAmount, StringFormat={}{0:N0}}" />
                    <TextBlock Margin="10,0" FontSize="18" FontWeight="Bold" Text="UZS" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Submit Button -->
                <Button Grid.Column="1" md:ElevationAssist.Elevation="Dp24"
                        Background="{StaticResource SuccessButtonBackground}"
                        BorderBrush="{StaticResource SuccessButtonBorder}"
                        Foreground="{StaticResource SuccessButtonForeground}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolToBoolConverter}}"
                        Command="{Binding SubmitCommand}"
                        Content="Yuborish" Padding="20,8" FontSize="14" />
            </Grid>
        </Grid>
    </Border>
</Page>