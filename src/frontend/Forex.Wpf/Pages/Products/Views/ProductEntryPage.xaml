<Page x:Class="Forex.Wpf.Pages.Products.Views.ProductEntryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forex.Wpf.Pages.Products.Views"
      xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="BurlyWood"
      Title="ProductEntryPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <DockPanel LastChildFill="False">
            <Label Content="Mahsulotlar kirim oynasi"
                FontSize="18"
                FontWeight="Bold"
                Foreground="{StaticResource SecondaryTextColor}" />

            <Button x:Name="btnBack"
                    Margin="0,0,0,5"
                    Padding="8,0"
                    md:ButtonAssist.CornerRadius="4"
                    md:ElevationAssist.Elevation="Dp24"
                    Background="{DynamicResource BackButtonBackground}"
                    BorderBrush="{StaticResource BackButtonBorder}"
                    Click="BtnBack_Click"
                    Content="🔙 Orqaga"
                    DockPanel.Dock="Right"
                    Foreground="{StaticResource BackButtonForeground}" />
        </DockPanel>

        <controls:UserCalendar Grid.Row="1" HorizontalAlignment="Left" Width="150"/>

        <Grid Grid.Row="2" Margin="0,12 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="120" />
                <ColumnDefinition Width="1.3*" MinWidth="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Mahsulot kodi  -->
            <controls:FloatingComboBox
        x:Name="cbxProductCode"
        Margin="10 0,2 0"
        DisplayMemberPath="Code"
        IsEditable="True"
        IsTextSearchEnabled="True"
        ItemsSource="{Binding AvailableProducts}"
        Label="Kodi"
        SelectedItem="{Binding CurrentProduct.Product}" />

            <!--  Mahsulot nomi  -->
            <controls:FloatingComboBox
        x:Name="cbxProductName"
        Grid.Column="1"
        Margin="2 0"
        DisplayMemberPath="Name"
        IsEditable="True"
        IsTextSearchEnabled="True"
        ItemsSource="{Binding AvailableProducts}"
        Label="Nomi"
        SelectedItem="{Binding CurrentProduct.Product}" />

            <!--  Razmer  -->
            <controls:FloatingComboBox
        x:Name="cbxRazmerType"
        Grid.Column="2"
        Margin="2 0"
        DisplayMemberPath="Type"
        IsEditable="True"
        IsTextSearchEnabled="True"
        ItemsSource="{Binding CurrentProduct.Product.ProductTypes}"
        Label="Razmer"
        SelectedItem="{Binding CurrentProduct.ProductType, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Qopda nechta borligi -->
            <controls:FloatingInput
        x:Name="tbxBundleItemCount"
        Grid.Column="3"
        Margin="2 0"
        Label="Qopdagi soni"
        Text="{Binding CurrentProduct.BundleCount, UpdateSourceTrigger=PropertyChanged}" />

            <!--  qsoplar oni  -->
            <controls:FloatingInput
        x:Name="tbxBundle"
        Grid.Column="4"
        Margin="2 0"
        Label="Qop soni"
        Text="{Binding CurrentProduct.BundleCount, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Jami soni  -->
            <controls:FloatingInput
        x:Name="tbxQuantity"
        Grid.Column="5"
        Margin="2 0"
        IsEnabled="False"
        Label="Jami soni"
        Text="{Binding CurrentProduct.TotalCount, UpdateSourceTrigger=PropertyChanged}" />

            <!--  tannarxi  -->
            <controls:FloatingInput
        x:Name="tbxCostPrice"
        Grid.Column="6"
        Margin="2 0"
        Label="Tan narxi"
        Text="{Binding CurrentProduct.UnitPrice, UpdateSourceTrigger=PropertyChanged}" />

            <Button
        x:Name="addButton"
        Grid.Column="7"
        Height="30"
        Margin="2 0 0 0"
        md:ButtonAssist.CornerRadius="4"
        Background="{DynamicResource OtherBackground}"
        Command="{Binding AddCommand}"
        Content="Qo'shish"
        FontSize="14" />
        </Grid>
        
        <Grid Grid.Row="3" Margin="0,5 0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="67*" />
                <ColumnDefinition Width="93*" />
            </Grid.ColumnDefinitions>
            <DataGrid
                BorderThickness="2"
                x:Name="dataGrid"
                Grid.ColumnSpan="2"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="True"
                FontSize="14"
                ItemsSource="{Binding SaleItems}"
                SelectionMode="Single"
                SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn
                Width="*"
                MinWidth="80"
                Binding="{Binding Product.Code}"
                Header="Kod"
                IsReadOnly="True" />

                    <DataGridTextColumn
                Width="1.5*"
                MinWidth="100"
                Binding="{Binding Product.Name}"
                Header="Nomi"
                IsReadOnly="True" />

                    <DataGridTextColumn
                Width="*"
                Binding="{Binding ProductType.Type}"
                Header="Razmer"
                IsReadOnly="True" />

                    <DataGridTextColumn
                Width="*"
                Binding="{Binding BundleCount, StringFormat={}{0:N0}}"
                Header="Qopdagi soni" />

                    <DataGridTextColumn
                Width="*"
                Binding="{Binding BundleCount, StringFormat={}{0:N0}}"
                Header="Qop soni" />

                    <DataGridTextColumn
                Width="*"
                Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
                Header="Jami soni"
                IsReadOnly="True" />

                    <DataGridTextColumn
                Width="*"
                Binding="{Binding UnitPrice, StringFormat={}{0:N2}}"
                Header="Tannarxi" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>


        <!--  Submit Button  -->
        <Button
            Grid.Row="4"
            Margin="0,5,0,0"
            HorizontalAlignment="Right"
            md:ButtonAssist.CornerRadius="4"
            md:ElevationAssist.Elevation="Dp24"
            Background="{StaticResource SuccessButtonBackground}"
            BorderBrush="{StaticResource SuccessButtonBorder}"
            Command="{Binding SubmitCommand}"
            Content="Yuborish"
            Foreground="{StaticResource SuccessButtonForeground}" />
    </Grid>
</Page>
