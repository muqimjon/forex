<Page
    x:Class="Forex.Wpf.Pages.Products.ProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Forex.Wpf.Pages.Products"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="ProductsPage"
    d:DesignHeight="580"
    d:DesignWidth="810"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  DataGrid cell style  -->
        <Style x:Key="TransparentCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style x:Key="InlineTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="InlineComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="*" />
            <!-- Main Content -->
            <RowDefinition Height="Auto" />
            <!-- Submit Button -->
        </Grid.RowDefinitions>

        <!--  Page Header  -->
        <DockPanel LastChildFill="False">
            <Label
                Content="Mahsulotlar kirim oynasi"
                FontSize="18"
                FontWeight="Bold"
                Foreground="{StaticResource SecondaryTextColor}" />

            <Button
                x:Name="btnBack"
                Padding="8,0"
                md:ButtonAssist.CornerRadius="4"
                md:ElevationAssist.Elevation="Dp24"
                Background="{DynamicResource BackButtonBackground}"
                BorderBrush="{StaticResource BackButtonBorder}"
                Click="BtnBack_Click"
                Content="🔙 Orqaga"
                DockPanel.Dock="Right"
                Foreground="{StaticResource BackButtonForeground}" />
        </DockPanel>

        <!--  Main Content  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left StackPanel with DataGrid -->
            <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Stretch">

                <Border Background="AliceBlue" CornerRadius="4">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="50"
                            Direction="280"
                            Opacity="0.2"
                            ShadowDepth="15"
                            Color="Black" />
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!-- Header inside Border -->
                            <RowDefinition Height="4" />
                            <!-- Spacer -->
                            <RowDefinition Height="*" />
                            <!-- DataGrid -->
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Margin="10,2"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextColor}"
                                Text="Mahsulotlar" />

                            <Button
                                Grid.Column="1"
                                Height="28"
                                Margin="10,0"
                                Padding="4"
                                Background="{DynamicResource PrimaryBackground}"
                                BorderBrush="{StaticResource BackButtonBorder}"
                                BorderThickness="0"
                                Command="{Binding ShowAllProductsCommand}"
                                Content="Barchasini ko'rsatish"
                                Foreground="{StaticResource BackButtonForeground}" />

                            <Button
                                Grid.Column="2"
                                Padding="4"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding AddProductCommand}"
                                Content="➕"
                                Foreground="{StaticResource PrimaryTextColor}" />
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid
                            Grid.Row="2"
                            AutoGenerateColumns="False"
                            Background="#f1f1f1"
                            BorderThickness="0"
                            CanUserAddRows="False"
                            EnableColumnVirtualization="True"
                            EnableRowVirtualization="False"
                            HeadersVisibility="Column"
                            IsReadOnly="False"
                            ItemsSource="{Binding FilteredProducts}"
                            RowHeaderWidth="0"
                            RowHeight="36"
                            ScrollViewer.CanContentScroll="True"
                            SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                            SnapsToDevicePixels="True"
                            UseLayoutRounding="True"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            VerticalAlignment="Stretch"
                            MinHeight="500">

                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                </Style>

                                <Style x:Key="RightAlignedText" TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right" />
                                    <Setter Property="Margin" Value="0,0,5,0" />
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <!-- Rasm -->
                                <DataGridTemplateColumn Width="100" Header="Rasm">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image
                                                Width="80"
                                                Height="80"
                                                Source="{Binding Product.Image, Converter={StaticResource ImageFallbackConverter}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Kod -->
                                <DataGridTemplateColumn Width="0.8*" Header="Kod">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                Padding="20,0,0,0"
                                                BorderThickness="0"
                                                DisplayMemberPath="Code"
                                                IsTextSearchEnabled="True"
                                                ItemsSource="{Binding DataContext.AvailableProducts, RelativeSource={RelativeSource AncestorType=Page}}"
                                                SelectedItem="{Binding Product, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Nomi -->
                                <DataGridTemplateColumn Width="1.5*" Header="Nomi">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                Padding="0"
                                                BorderThickness="0"
                                                DisplayMemberPath="Name"
                                                IsTextSearchEnabled="True"
                                                ItemsSource="{Binding DataContext.AvailableProducts, RelativeSource={RelativeSource AncestorType=Page}}"
                                                SelectedItem="{Binding Product, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- O'lcham -->
                                <DataGridTemplateColumn Width="*" Header="O'lcham">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                Padding="20,0,0,0"
                                                BorderThickness="0"
                                                DisplayMemberPath="Type"
                                                IsTextSearchEnabled="True"
                                                ItemsSource="{Binding AvailableProductTypes}"
                                                SelectedItem="{Binding ProductType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Soni -->
                                <DataGridTextColumn
                                    Width="0.5*"
                                    Binding="{Binding ProductType.Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                                    ElementStyle="{StaticResource RightAlignedText}"
                                    Header="Soni"
                                    IsReadOnly="True" />

                                <!-- Jami soni -->
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
                                    ElementStyle="{StaticResource RightAlignedText}"
                                    Header="Jami soni"
                                    IsReadOnly="True" />


                                <!-- Actions -->
                                <DataGridTemplateColumn Width="0.2*" Header="">
                                    <DataGridTemplateColumn.CellStyle>
                                        <StaticResource ResourceKey="TransparentCellStyle" />
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <controls:ActionButton
                                                Margin="0,0,10,0"
                                                HorizontalContentAlignment="Center"
                                                CommandParameter="{Binding}"
                                                DeleteCommand="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                EditCommand="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                IsEditing="{Binding IsEditing, Mode=TwoWay}"
                                                SaveCommand="{Binding DataContext.SaveProductCommand, RelativeSource={RelativeSource AncestorType=Page}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Right Panel (Supplier / Details) -->
            <Border Grid.Column="2"
                    Padding="10"
                    Background="#f1f1f1"
                    CornerRadius="4">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="50"
                        Direction="300"
                        Opacity="0.3"
                        ShadowDepth="15"
                        Color="Black" />
                </Border.Effect>

                <!-- Right Content -->
                <StackPanel Orientation="Vertical" Visibility="{Binding SelectedProduct, Converter={StaticResource NullToVisibility}}">
                    <!-- Right panel contents unchanged -->
                </StackPanel>
            </Border>
        </Grid>

        <!-- Submit Button -->
        <Button Grid.Row="2"
                HorizontalAlignment="Right"
                md:ElevationAssist.Elevation="Dp24"
                Background="{StaticResource SuccessButtonBackground}"
                BorderBrush="{StaticResource SuccessButtonBorder}"
                Command="{Binding SubmitCommand}"
                Content="Yuborish"
                Foreground="{StaticResource SuccessButtonForeground}" />
    </Grid>
</Page>
