<UserControl x:Class="Forex.Wpf.Pages.Reports.ViewModels.CustomerTurnoverReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FILTER PANEL -->
        <Border Grid.Row="0" Background="Transparent"  Padding="1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- MIJOZ + SANA -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="325"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Hisobot davri" FontSize="13" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <controls:UserCalendar Width="120" Height="30" SelectedDate="{Binding BeginDate, Mode=TwoWay}"/>
                        <TextBlock Text="dan" Margin="8,0" VerticalAlignment="Center"/>
                        <controls:UserCalendar Width="120" Height="30" SelectedDate="{Binding EndDate, Mode=TwoWay}"/>
                        <TextBlock Text="gacha" Margin="3,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Mijoz" FontSize="13" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="30"
                        BorderBrush="#CCCCCC"
                        BorderThickness="2"
                        CornerRadius="4">
                        <ComboBox
                            Padding="3"
                            BorderThickness="0"
                            DisplayMemberPath="Name"
                            FontSize="14"
                            IsEditable="True"
                            ItemsSource="{Binding AvailableCustomers}"
                            SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}" />
                    </Border>
                </Grid>

                <!-- TUGMALAR -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0 15 0">
                    <Button Content="Ko‘rish" Height="30" md:ButtonAssist.CornerRadius="4" Command="{Binding PreviewCommand}" Margin="0,5"/>
                    <Button Content="Tozalash" Height="30" md:ButtonAssist.CornerRadius="4" Command="{Binding ClearFilterCommand}" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0">
                    <Button Content="Pechat" Height="30" md:ButtonAssist.CornerRadius="4" Command="{Binding PrintCommand}" Margin="0,5"/>
                    <Button Content="Excel" Height="30" md:ButtonAssist.CornerRadius="4" Command="{Binding ExportToExcelCommand}" Margin="0,5"/>
                </StackPanel>

                <!-- QOLDIQLAR -->
                <Border Grid.Column="3" Background="#E8F5E8" CornerRadius="8" Padding="15" Margin="20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="Boshlang‘ich qoldiq:" FontSize="15" FontWeight="SemiBold" Margin="0,0,15,0"/>
                            <TextBlock Text="{Binding BeginBalance, StringFormat=N2}" FontSize="16" FontWeight="Bold" Foreground="#1B5E20"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                            <TextBlock Text="Oxirgi qoldiq:" FontSize="15" FontWeight="SemiBold" Margin="0,0,15,0"/>
                            <TextBlock Text="{Binding LastBalance, StringFormat=N2}" FontSize="18" FontWeight="Bold" Foreground="#B71C1C"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- DATAGRID — MIJOZ USTUNI YO‘Q! -->
        <DataGrid Grid.Row="1" Margin="0,15,0,0"
                  ItemsSource="{Binding Operations}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="#F8F9FA"
                  FontSize="14"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0"
                  GridLinesVisibility="Horizontal">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Sana" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="110">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Kirim" Binding="{Binding Debit, StringFormat=N0}" Width="150">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#1B5E20"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Margin" Value="0,0,12,0"/>
                            <Setter Property="Foreground" Value="#2E7D32"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Chiqim" Binding="{Binding Credit, StringFormat=N0}" Width="150">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#B71C1C"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Margin" Value="0,0,12,0"/>
                            <Setter Property="Foreground" Value="#C62828"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Izoh" Binding="{Binding Description}" Width="*">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="8,6"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>