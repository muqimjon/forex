<UserControl
    x:Class="Forex.Wpf.Pages.Reports.ViewModels.CustomerTurnoverReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  FILTER PANEL  -->
        <Border
            Grid.Row="0"
            Padding="1"
            Background="Transparent">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  MIJOZ + SANA  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="325" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Text="Hisobot davri" />
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <controls:UserCalendar x:Name="dateBegin"
                            Width="120"
                            Height="30"
                            SelectedDate="{Binding BeginDate, Mode=TwoWay}" />
                        <TextBlock
                            Margin="8,0"
                            VerticalAlignment="Center"
                            Text="dan" />
						<controls:UserCalendar x:Name="dateEnd"
                            Width="120"
                            Height="30"
                            SelectedDate="{Binding EndDate, Mode=TwoWay}" />
                        <TextBlock
                            Margin="3,0"
                            VerticalAlignment="Center"
                            Text="gacha" />
                    </StackPanel>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Text="Mijoz" />
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="30"
                        BorderBrush="#CCCCCC"
                        BorderThickness="2"
                        CornerRadius="4">
                        <ComboBox x:Name="cbxCustomer"
                            Padding="3"
                            BorderThickness="0"
                            DisplayMemberPath="Name"
                            FontSize="14"
                            IsEditable="True"
                            ItemsSource="{Binding AvailableCustomers}"
                            SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}" />
                    </Border>
                </Grid>

                <!--  TUGMALAR  -->
                <StackPanel
                    Grid.Column="1"
                    Margin="20,0,15,0"
                    VerticalAlignment="Center">
                    <Button x:Name="btnPreview"
                        Height="30"
                        Margin="0,5"
                        md:ButtonAssist.CornerRadius="4"
                        Background="#1976D2"
                        BorderThickness="0"
                        Command="{Binding PreviewCommand}"
                        Content="Ko‘rish"
                        Foreground="White" />
                    <Button x:Name="btnClear"
                        Height="30"
                        Margin="0,5"
                        md:ButtonAssist.CornerRadius="4"
                        Background="#3949AB"
                        BorderThickness="0"
                        Command="{Binding ClearFilterCommand}"
                        Content="Tozalash"
                        Foreground="White" />
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Margin="0"
                    VerticalAlignment="Center">
                    <Button x:Name="btnPrint"
                        Height="30"
                        Margin="0,5"
                        md:ButtonAssist.CornerRadius="4"
                        Background="#00897B"
                        BorderThickness="0"
                        Command="{Binding PrintCommand}"
                        Content="Pechat"
                        Foreground="White" />
                    <Button x:Name="btnExport"
                        Height="30"
                        Margin="0,5"
                        md:ButtonAssist.CornerRadius="4"
                        Background="#2E7D32"
                        BorderThickness="0"
                        Command="{Binding ExportToExcelCommand}"
                        Content="Excel"
                        Foreground="White" />
                </StackPanel>

                <!--  QOLDIQLAR  -->
                <Border
                    Grid.Column="3"
                    Margin="20,0"
                    Padding="15"
                    Background="#E8F5E8"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,15,0"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Text="Boshlang‘ich qoldiq:" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#1B5E20"
                                Text="{Binding BeginBalance, StringFormat=N2}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,15,0"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Text="Oxirgi qoldiq:" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="#B71C1C"
                                Text="{Binding LastBalance, StringFormat=N2}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!--  DATAGRID — MIJOZ USTUNI YO‘Q!  -->
        <DataGrid
            Grid.Row="1"
            Margin="0,15,0,0"
            AlternatingRowBackground="#F8F9FA"
            AutoGenerateColumns="False"
            FontSize="14"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding Operations}"
            RowHeaderWidth="0"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}">

            <DataGrid.Columns>
                <DataGridTemplateColumn Width="60" Header="T/r">

                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>

                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                        </Style>
                    </DataGridTemplateColumn.CellStyle>

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}, Converter={StaticResource IndexConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="110"
                    Binding="{Binding Date, StringFormat=dd.MM.yyyy}"
                    Header="Sana">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Debit, StringFormat=N0}"
                    Header="Chiqim">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Foreground" Value="#C62828" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="Margin" Value="0,0,12,0" />
                            <Setter Property="Foreground" Value="#C62828" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Credit, StringFormat=N0}"
                    Header="Kirim">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Foreground" Value="#1B5E20" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="Margin" Value="0,0,12,0" />
                            <Setter Property="Foreground" Value="#1B5E20" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description}"
                    Header="Izoh">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap" />
                            <Setter Property="Padding" Value="8,6" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>