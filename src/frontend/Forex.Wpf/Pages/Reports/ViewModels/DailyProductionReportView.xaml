<UserControl x:Class="Forex.Wpf.Pages.Reports.ViewModels.DailyProductionReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="White">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="259*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  FILTER PANEL  -->
        <Border
            Grid.Row="0"
            Padding="1"
            Background="Transparent" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  MIJOZ + SANA  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="325" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Text="Hisobot davri" />
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <controls:UserCalendar
                            Width="120"
                            Height="30"
                            SelectedDate="{Binding BeginDate, Mode=TwoWay}" />
                        <TextBlock
                            Margin="8,0"
                            VerticalAlignment="Center"
                            Text="dan" />
                        <controls:UserCalendar
                            Width="120"
                            Height="30"
                            SelectedDate="{Binding EndDate, Mode=TwoWay}" />
                        <TextBlock
                            Margin="3,0"
                            VerticalAlignment="Center"
                            Text="gacha" />
                    </StackPanel>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Text="Kodi" />
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="30"
                        BorderBrush="#CCCCCC"
                        BorderThickness="2"
                        CornerRadius="4">
                        <ComboBox
                            Padding="3"
                            BorderThickness="0"
                            DisplayMemberPath="Code"
                            FontSize="14"
                            IsEditable="True"
                            ItemsSource="{Binding AvailableProducts}"
                            SelectedItem="{Binding SelectedCode, Mode=TwoWay}" />
                    </Border>
                </Grid>

                <!--  TUGMALAR  -->
                <StackPanel
                    Grid.Column="1"
                    Margin="20,0,15,0"
                    VerticalAlignment="Center">
                    <Button
                        Height="30"
                        Margin="0,5"
                        md:ButtonAssist.CornerRadius="4"
                        Background="#1976D2"
                        BorderThickness="0"
                        Command="{Binding PreviewCommand}"
                        Content="Ko‘rish"
                        Foreground="White" />
                    <Button
                        Height="30"
                        Margin="0,5"
                        md:ButtonAssist.CornerRadius="4"
                        Background="#3949AB"
                        BorderThickness="0"
                        Command="{Binding ClearFilterCommand}"
                        Content="Tozalash"
                        Foreground="White" />
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Margin="0"
                    VerticalAlignment="Center">
                    <Button
                        Height="30"
                        Margin="0,5"
                        md:ButtonAssist.CornerRadius="4"
                        Background="#00897B"
                        BorderThickness="0"
                        Command="{Binding PrintCommand}"
                        Content="Pechat"
                        Foreground="White" />
                    <Button
                        Height="30"
                        Margin="0,5"
                        md:ButtonAssist.CornerRadius="4"
                        Background="#2E7D32"
                        BorderThickness="0"
                        Command="{Binding ExportToExcelCommand}"
                        Content="Excel"
                        Foreground="White" />
                </StackPanel>

                <!--  QOLDIQLAR  -->
                <Border
                    Grid.Column="3"
                    Margin="20,0"
                    Padding="15"
                    Background="#E8F5E8"
                    CornerRadius="8">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <!--  Tayyor  -->
                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Text="Tayyor:" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#1B5E20"
                                Text="{Binding TayyorAmount, StringFormat=N2}" />
                        </StackPanel>

                        <!--  Aralash  -->
                        <StackPanel
                            Grid.Column="1"
                            Margin="20,0"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Text="Aralash:" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#B71C1C"
                                Text="{Binding AralashAmount, StringFormat=N2}" />
                        </StackPanel>

                        <!--  Eva  -->
                        <StackPanel
                            Grid.Column="2"
                            Margin="20,0"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Text="Eva:" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#0D47A1"
                                Text="{Binding EvaAmount, StringFormat=N2}" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!--  DATAGRID — MIJOZ USTUNI YO‘Q!  -->
        <DataGrid
            Grid.Row="1"
            Margin="10,5,10,5"
            AlternatingRowBackground="#F5F5F5"
            AutoGenerateColumns="False"
            FontSize="14"
            IsReadOnly="True"
            ItemsSource="{Binding Items}" Grid.ColumnSpan="2">

            <!--  HEADERLARNI O‘RTAGA OLISH  -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Width="60" Header="T/r">
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding
                                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}},
                                    Converter={StaticResource IndexConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  Sana — o‘rtada  -->
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Date, StringFormat=dd.MM.yyyy}"
                    Header="Sana">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Kodi — qiymati o‘rtada  -->
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Code}"
                    Header="Kodi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Nomi — chapda  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Nomi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Razmer — o‘rtada  -->
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Type}"
                    Header="Razmer">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <!--  Qop soni — chapda  -->
                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding BundleCount}"
                    Header="Qop soni">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Qopdagi soni — o‘rtada  -->
                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding BundleItemCount, StringFormat=N0}"
                    Header="Donasi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>


                <!--  Jami — o‘ngda  -->
                <DataGridTextColumn
                    Width="0.5*"
                    Binding="{Binding TotalCount, StringFormat=N0}"
                    Header="Jami">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Tayyorlanish usuli — o‘rtada  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ProductionType}"
                    Header="Tayyorlanish usuli">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="Foreground" Value="#1565C0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>