<UserControl x:Class="Forex.Wpf.Pages.Reports.ViewModels.CustomerSalesRatingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  FILTER PANEL  -->
        <Border
            Grid.Row="0"
            Padding="1"
            Background="Transparent">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  MIJOZ + SANA  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="325" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Text="Hisobot davri" />
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <controls:UserCalendar x:Name="dateBegin"
                            Width="120"
                            Height="30"
                            SelectedDate="{Binding BeginDate, Mode=TwoWay}" />
                        <TextBlock
                            Margin="8,0"
                            VerticalAlignment="Center"
                            Text="dan" />
						<controls:UserCalendar x:Name="dateEnd"
                            Width="120"
                            Height="30"
                            SelectedDate="{Binding EndDate, Mode=TwoWay}" />
                        <TextBlock
                            Margin="3,0"
                            VerticalAlignment="Center"
                            Text="gacha" />
                    </StackPanel>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Text="Mijoz" />
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="30"
                        BorderBrush="#CCCCCC"
                        BorderThickness="2"
                        CornerRadius="4">
                        <ComboBox x:Name="cbxCustomer"
                            Padding="3"
                            BorderThickness="0"
                            DisplayMemberPath="Name"
                            FontSize="14"
                            IsEditable="True"
                            ItemsSource="{Binding AvailableCustomers}"
                            SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}" />
                    </Border>
                </Grid>

                <!--  TUGMALAR  -->
                <StackPanel
                    Grid.Column="1"
                    Margin="20,0,15,0"
                    VerticalAlignment="Center">
					<Button x:Name="btnPreview"
                        Height="30"
                        Margin="0,5"
                        Background="#1976D2"
                        Foreground="White"
                        BorderThickness="0"
                        md:ButtonAssist.CornerRadius="4"
                        Command="{Binding PreviewCommand}"
                        Content="Ko‘rish" />
                    <Button x:Name="btnClear"
                        Height="30"
                        Margin="0,5"
                        Background="#3949AB"
                        Foreground="White"
                        BorderThickness="0"
                        md:ButtonAssist.CornerRadius="4"
                        Command="{Binding ClearFilterCommand}"
                        Content="Tozalash" />
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Margin="0"
                    VerticalAlignment="Center">
                    <Button x:Name="btnPrint"
                        Height="30"
                        Margin="0,5"
                        BorderThickness="0"
                        Background="#00897B"
                        Foreground="White"
                        md:ButtonAssist.CornerRadius="4"
                        Command="{Binding PrintCommand}"
                        Content="Pechat" />
                    <Button x:Name="btnExport"
                        Height="30"
                        Margin="0,5"
                        BorderThickness="0"
                        Background="#2E7D32"
                        Foreground="White"
                        md:ButtonAssist.CornerRadius="4"
                        Command="{Binding ExportToExcelCommand}"
                        Content="Excel" />
                </StackPanel>

                <!--  QOLDIQLAR  -->
            </Grid>
        </Border>

        <DataGrid
            Grid.Row="1"
            Margin="0,15,0,0"
            AlternatingRowBackground="#F8F9FA"
            AutoGenerateColumns="False"
            FontSize="14"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding CustomerSales}"
            RowHeaderWidth="0">

            <!-- 🔹 Barcha headerlarni o‘rtaga tekislash -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <!-- T/r -->
                <DataGridTextColumn Width="60" Binding="{Binding RowNumber}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="T/r"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Mijoz nomi -->
                <DataGridTextColumn Width="2*" Binding="{Binding CustomerName}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Mijoz nomi"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="10,6"/>
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Tayyor -->
                <DataGridTextColumn Width="*" Binding="{Binding ReadyCount, StringFormat=N0}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Tayyor" Foreground="#1565C0"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#1565C0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Aralash -->
                <DataGridTextColumn Width="*" Binding="{Binding MixedCount, StringFormat=N0}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Aralash" Foreground="#6A1B9A"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#6A1B9A"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Eva -->
                <DataGridTextColumn Width="*" Binding="{Binding EvaCount, StringFormat=N0}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Eva" Foreground="#D81B60"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#D81B60"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Jami -->
                <DataGridTextColumn Width="*" Binding="{Binding TotalCount, StringFormat=N0}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Jami" Foreground="#1B5E20"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="ExtraBold"/>
                            <Setter Property="Foreground" Value="#1B5E20"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Background" Value="#E8F5E8"/>
                            <Setter Property="Padding" Value="0,6"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>