<UserControl
    x:Class="Forex.Wpf.Pages.Reports.ViewModels.FinishedStockReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="12" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="Kodi" />
                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="30"
                    BorderBrush="#CCCCCC"
                    BorderThickness="2"
                    CornerRadius="4">
                    <ComboBox
                        Width="275"
                        Padding="3"
                        BorderThickness="0"
                        DisplayMemberPath="Code"
                        FontSize="14"
                        IsEditable="True"
                        ItemsSource="{Binding AvailableProducts}"
                        SelectedItem="{Binding SelectedCode, Mode=TwoWay}" />
                </Border>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="Nomi" />
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="30"
                    BorderBrush="#CCCCCC"
                    BorderThickness="2"
                    CornerRadius="4">
                    <ComboBox
                        Width="275"
                        Padding="3"
                        BorderThickness="0"
                        DisplayMemberPath="Name"
                        FontSize="14"
                        IsEditable="True"
                        ItemsSource="{Binding AvailableProducts}"
                        SelectedItem="{Binding SelectedProduct, Mode=TwoWay}" />
                </Border>
            </Grid>

            <StackPanel
                Grid.Column="1"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Button
                    Height="29"
                    Background="#1976D2"
                    Foreground="White"
                    BorderThickness="0"
                    md:ButtonAssist.CornerRadius="4"
                    Margin="0,2"
                    Command="{Binding PreviewCommand}"
                    Content="Ko‘rish" />
                <Button
                    Height="29"
                    Background="#3949AB"
                    Foreground="White"
                    BorderThickness="0"
                    md:ButtonAssist.CornerRadius="4"
                    Margin="0,2"
                    Command="{Binding ClearFilterCommand}"
                    Content="Tozalash" />
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                Margin="10,0"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Button
                    Height="29"
                    BorderThickness="0"
                    Background="#00897B"
                    Foreground="White"
                    md:ButtonAssist.CornerRadius="4"
                    Margin="0,2"
                    Command="{Binding PrintCommand}"
                    Content="Pechat" />
                <Button
                    Height="29"
                    BorderThickness="0"
                    Background="#2E7D32"
                    Foreground="White"
                    md:ButtonAssist.CornerRadius="4"
                    Margin="0,2"
                    Command="{Binding ExportToExcelCommand}"
                    Content="Excel" />
            </StackPanel>
        </Grid>

        <DataGrid
            Grid.Row="1"
            Margin="10,5"
            AlternatingRowBackground="#F5F5F5"
            AutoGenerateColumns="False"
            FontSize="14"
            IsReadOnly="True"
            ItemsSource="{Binding Items}">

            <!--  HEADERLARNI O‘RTAGA OLISH  -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Width="60" Header="T/r">
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding
                                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}},
                                    Converter={StaticResource IndexConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <!--  Kodi — qiymati o‘rtada  -->
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Code}"
                    Header="Kodi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Nomi — chapda  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Nomi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Razmer — o‘rtada  -->
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Type}"
                    Header="Razmer">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Qop soni — chapda  -->
                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding BundleCount}"
                    Header="Qop soni">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Qopdagi soni — o‘rtada  -->
                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding BundleItemCount, StringFormat=N0}"
                    Header="Donasi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>


                <!--  Jami — o‘ngda  -->
                <DataGridTextColumn
                    Width="0.5*"
                    Binding="{Binding TotalCount, StringFormat=N0}"
                    Header="Jami">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Narxi — o‘ngda  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UnitPrice, StringFormat=N2}"
                    Header="Narxi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Umumiy summa — o‘ngda  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TotalAmount, StringFormat=N2}"
                    Header="Umumiy summa">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>