<Page
    x:Class="Forex.Wpf.Pages.Reports.ReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:views="clr-namespace:Forex.Wpf.Pages.Reports.ViewModels"
    Title="Hisobotlar"
    Background="#F8F9FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Orqaga tugmasi  -->
        <Button
            x:Name="btnBack"
            Grid.Row="0"
            HorizontalAlignment="Right"
            md:ButtonAssist.CornerRadius="4"
            Background="{DynamicResource OtherBackground}"
            BorderThickness="0"
            Margin="0 5"
            Click="BtnBack_Click"
            Content="🔙 Orqaga"
            ToolTip="Orqaga" />

        <!--  TabControl – MaterialDesign chiroyli ko‘rinishi  -->
        <md:Card
            Grid.Row="1"
            Padding="0"
            md:ElevationAssist.Elevation="Dp4"
            UniformCornerRadius="4">
            <TabControl
                x:Name="ReportsTab"
                md:ColorZoneAssist.Mode="PrimaryLight"
                FontSize="15"
                FontWeight="Medium"
                SelectedIndex="0"
                TabStripPlacement="Top">

                <!--  1. Savdo tarixi  -->
                <TabItem Header="Savdo tarixi">
                    <views:SalesHistoryReportView DataContext="{Binding SalesHistoryVM}" />
                </TabItem>

                <!--  3. Tayyor mahsulotlar qoldig‘i  -->
                <TabItem Header="Tayyor mahsulotlar qoldig‘i">
                    <views:FinishedStockReportView DataContext="{Binding FinishedStockVM}" />
                </TabItem>
                <!--  2. Mijoz aylanmasi  -->
                <TabItem Header="Mijoz aylanmasi">
                    <views:CustomerTurnoverReportView DataContext="{Binding CustomerTurnoverVM}" />
                </TabItem>
                <!--4. Yarim tayyor mahsulotlar
                <TabItem Header="Yarim tayyor mahsulotlar">
                <views:SemiFinishedStockReportView DataContext="{Binding SemiFinishedStockVM}"/>
                </TabItem>

                5. Debitor va Kreditor
                <TabItem Header="Debitor va Kreditor">
                <views:DebtorCreditorReportView DataContext="{Binding DebtorCreditorVM}"/>
                </TabItem>

                6. Hodimlar balansi
                <TabItem Header="Hodimlar balansi">
                <views:EmployeeBalanceReportView DataContext="{Binding EmployeeBalanceVM}"/>
                </TabItem>

                7. Mijozlar sotgan mahsulotlar soni
                <TabItem Header="Mijozlar sotgan mahsulotlar">
                <views:CustomerSalesReportView DataContext="{Binding CustomerSalesVM}"/>
                </TabItem>-->

            </TabControl>
        </md:Card>
    </Grid>
</Page>