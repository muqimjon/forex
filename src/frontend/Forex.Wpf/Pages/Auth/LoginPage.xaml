<Page
    x:Class="Forex.Wpf.Pages.Auth.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Forex.Wpf.Pages.Auth"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="LoginPage"
    d:DesignHeight="600"
    d:DesignWidth="650"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resources/Assets/bekson.png"
                        Stretch="Uniform" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="LoginPanel"
                            Storyboard.TargetProperty="Opacity"
                            From="0"
                            To="1"
                            Duration="0:0:1" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

        <Border Background="#AA000000">
            <Border.Effect>
                <BlurEffect Radius="5"/>
            </Border.Effect>
        </Border>

        <Border
            x:Name="LoginPanel"
            Width="360"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#CC2D2D44"
            CornerRadius="12"
            BorderBrush="#44FFFFFF"
            BorderThickness="1"
            Opacity="2">

            <StackPanel>
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Forex tizimiga hush kelibsiz!" />

                <TextBox
                    x:Name="tbLogin"
                    Margin="0,0,0,10"
                    Padding="8"
                    md:HintAssist.Hint="Username"
                    Background="#3A3A55"
                    BorderThickness="0"
                    FontSize="16"
                    Foreground="White" />

                <PasswordBox
                    x:Name="pbPassword"
                    Margin="0,0,0,10"
                    Padding="8"
                    md:HintAssist.Hint="Parol"
                    Background="#3A3A55"
                    BorderThickness="0"
                    FontSize="16"
                    Foreground="White" />

                <CheckBox
                    x:Name="chRemember"
                    Margin="0,0,0,10"
                    Content="Remember me"
                    Foreground="White" />

                <Button
                    x:Name="btnLogin"
                    Padding="4"
                    md:ButtonAssist.CornerRadius="6"
                    Background="#4C8EF7"
                    BorderThickness="0"
                    Click="BtnLogin_Click"
                    Content="🔐 Login"
                    FontWeight="Bold"
                    Foreground="White"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolToBoolConverter}}" />

                <TextBlock
                    x:Name="lblError"
                    Margin="0,10,0,0"
                    Foreground="Crimson"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />
            </StackPanel>
        </Border>
    </Grid>
</Page>