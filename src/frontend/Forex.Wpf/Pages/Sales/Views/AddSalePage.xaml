<Page x:Name="RootPage"
      x:Class="Forex.Wpf.Pages.Sales.Views.AddSalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Forex.Wpf.Pages.Sales.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource PrimaryBackground}"
      Title="AddSalePage">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <!--  == header:: Back button ==  -->
            <RowDefinition Height="120" />
            <!--  == Mijoz ma'lumotlari ==  -->
            <RowDefinition Height="50" />
            <!--  == Kiritilayotgan sale item ma'lumotlari qatori ==  -->
            <RowDefinition Height="*" />
            <!--  == DataGrid ==  -->
            <RowDefinition Height="50" />
            <!--  == footer::Submit button ==  -->

        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0" Margin="10,0">
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryTextColor}"
                Text="🛒 Savdo bo'limi" />

            <Button
                x:Name="btnBack"
                Grid.Row="0"
                HorizontalAlignment="Right"
                md:ButtonAssist.CornerRadius="5"
                Background="{DynamicResource OtherBackground}"
                BorderThickness="0"
                Click="BtnBack_Click"
                Content="🔙 Orqaga"
                ToolTip="Orqaga" />
        </Grid>

        <!--  Body  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="500" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Labels  -->
                <Label
                    Grid.Row="0"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Content="Sana:"
                    FontSize="14" />
                <Label
                    Grid.Row="1"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Content="Mijoz:"
                    FontSize="14" />
                <Label
                    Grid.Row="2"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Content="Summa:"
                    FontSize="14" />
                <Label
                    Grid.Row="3"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Content="Izox:"
                    FontSize="14" />

                <!--  Sana  -->
                <Grid Grid.Row="0" Grid.Column="1">
                    <controls:UserCalendar
                        x:Name="supplyDate"
                        Width="120"
                        Margin="0,0,5,0"
                        Padding="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="{DynamicResource PrimaryBackground}"
                        FontSize="14"
                        SelectedDate="{Binding Date, Mode=TwoWay}" />
                </Grid>

                <!--  Mijoz  -->
                <Grid Grid.Row="1" Grid.Column="1">
                    <Border
                        Margin="0,2,0,2"
                        BorderBrush="{DynamicResource PrimaryTextColor}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <ComboBox
                            x:Name="customerComboBox"
                            Padding="5,1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            DisplayMemberPath="Name"
                            FontSize="14"
                            IsEditable="True"
                            IsTextSearchEnabled="True"
                            ItemsSource="{Binding AvailableCustomers}"
                            LostFocus="CustomerComboBox_LostFocus"
                            SelectedItem="{Binding Customer}"
                            Text="{Binding CustomerInput, Mode=TwoWay}" />

                    </Border>
                </Grid>

                <!--  Valyuta turi  -->
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Column="0"
                        Margin="0,2,10,2"
                        BorderBrush="{DynamicResource PrimaryTextColor}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <TextBox
                            x:Name="TotalSum"
                            Padding="3,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            BorderThickness="0"
                            FontSize="14"
                            IsReadOnly="True"
                            IsTabStop="False"
                            Text="{Binding TotalAmount, StringFormat={}{0:N2}}"
                            TextAlignment="Right" />

                    </Border>

                    <Label
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="To'lashga:"
                        FontSize="14" />

                    <Border
                        Grid.Column="2"
                        Margin="0,2,0,2"
                        BorderBrush="{DynamicResource PrimaryTextColor}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <TextBox
                            x:Name="finalSumm"
                            Padding="3,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            BorderThickness="0"
                            FontSize="14"
                            IsReadOnly="True"
                            IsTabStop="False"
                            Text="{Binding FinalAmount, StringFormat={}{0:N2}}"
                            TextAlignment="Right" />
                    </Border>
                </Grid>

                <!--  Izox  -->
                <Grid Grid.Row="3" Grid.Column="1">
                    <Border
                        Margin="0,2"
                        BorderBrush="{DynamicResource PrimaryTextColor}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <TextBox
                            x:Name="noteTextBox"
                            Padding="3,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            BorderThickness="0"
                            FontSize="14"
                            Text="{Binding Note}"
                            TextAlignment="Left" />
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Padding="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="12"
                    FontStyle="Italic"
                    FontWeight="Bold"
                    Text="Mijoz hisobi:" />

                <TextBlock
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    Text="Joriy:" />
                <TextBox
                    x:Name="beginBalans"
                    Grid.Row="1"
                    Margin="35,2,2,2"
                    Padding="0"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="12"
                    IsReadOnly="True"
                    IsTabStop="False"
                    Text="{Binding TotalAmountWithUserBalance, StringFormat={}{0:N2}}" />

                <TextBlock
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    Text="Qoldiq:" />
                <TextBox
                    x:Name="lastBalans"
                    Grid.Row="2"
                    Margin="35,2,2,2"
                    Padding="0"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="12"
                    IsReadOnly="True"
                    Text="{Binding Customer.Balance, StringFormat={}{0:N2}}" />

                <TextBlock
                    Grid.Row="3"
                    VerticalAlignment="Center"
                    Text="Telefon:" />
                <TextBox
                    x:Name="tel"
                    Grid.Row="3"
                    Margin="42,2,2,2"
                    Padding="0"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="12"
                    IsReadOnly="True"
                    IsTabStop="False"
                    Text="{Binding Customer.Phone}" />

            </Grid>
        </Grid>

        <!--  == Kiritilayotgan Sale Item ma'lumotlari qatori ==  -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="120" />
                <ColumnDefinition Width="1.5*" MinWidth="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Mahsulot kodi  -->

            <controls:FloatingComboBox
                x:Name="cbxProductCode"
                Margin="10,0,2,0"
                DisplayMemberPath="Code"
                IsEditable="True"
                IsTextSearchEnabled="True"
                ItemsSource="{Binding AvailableProducts}"
                Label="Kodi"
                SelectedItem="{Binding CurrentSaleItem.Product}" />



            <!--  Mahsulot nomi  -->
            <controls:FloatingComboBox
                x:Name="cbxProductName"
                Grid.Column="1"
                Margin="2,0"
                DisplayMemberPath="Name"
                IsEditable="True"
                IsTextSearchEnabled="True"
                ItemsSource="{Binding AvailableProducts}"
                Label="Nomi"
                SelectedItem="{Binding CurrentSaleItem.Product}" />

            <!--  Razmer  -->
            <controls:FloatingComboBox
                x:Name="cbxRazmerType"
                Grid.Column="2"
                Margin="2,0"
                DisplayMemberPath="Type"
                IsTextSearchEnabled="True"
                ItemsSource="{Binding CurrentSaleItem.Product.ProductTypes}"
                Label="Razmer"
                SelectedItem="{Binding CurrentSaleItem.ProductType, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Razmer soni  -->
            <controls:FloatingInput
                x:Name="tbxRazmerCount"
                Grid.Column="3"
                Margin="2,0"
                Label="Qop soni"
                Text="{Binding CurrentSaleItem.BundleCount, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Jami soni  -->
            <controls:FloatingInput
                x:Name="tbxQuantity"
                Grid.Column="4"
                Margin="2,0"
                IsEnabled="False"
                Label="Jami soni"
                Text="{Binding CurrentSaleItem.TotalCount, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Narxi  -->
            <controls:FloatingInput
                x:Name="tbxPrice"
                Grid.Column="5"
                Margin="2,0"
                Label="Narxi"
                Text="{Binding CurrentSaleItem.UnitPrice, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Jami summa  -->
            <controls:FloatingInput
                x:Name="tbxSum"
                Grid.Column="6"
                Margin="2,0"
                IsEnabled="False"
                Label="Jami summa"
                Text="{Binding CurrentSaleItem.Amount, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                x:Name="addButton"
                Grid.Column="7"
                Height="30"
                Margin="2,0,7,0"
                md:ButtonAssist.CornerRadius="4"
                Background="{DynamicResource OtherBackground}"
                Command="{Binding AddCommand}"
                Content="Qo'shish"
                FontSize="14" />

            <!--<controls:FloatingImageComboBox
            Grid.Column="8"
            Label="Country"
            ItemsSource="{Binding DataContext.Countries, ElementName=RootPage}"
            SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"
            />-->


        </Grid>
        <Grid Grid.Row="3" Margin="0,5,0,5">
            <DataGrid
                x:Name="dataGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                FontSize="14"
                ItemsSource="{Binding SaleItems}"
                SelectedItem="{Binding SelectedSaleItem}"
                SelectionMode="Single"
                SelectionUnit="FullRow"
                AlternatingRowBackground="#F9F9F9"
                HeadersVisibility="Column"
                IsReadOnly="True">

                <DataGrid.Resources>
                    <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
                        <Setter Property="TextAlignment" Value="Right" />
                        <Setter Property="Padding" Value="0,0,5,0" />
                    </Style>

                    <Style x:Key="CenterAlignedCellStyle" TargetType="TextBlock">
                        <Setter Property="TextAlignment" Value="Center" />
                    </Style>

                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="60" Header="T/r">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding
                                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}},
                                    Converter={StaticResource IndexConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn
                        Width="*"
                        MinWidth="80"
                        Binding="{Binding Product.Code}"
                        Header="Kod" />

                    <DataGridTextColumn
                        Width="1.5*"
                        MinWidth="100"
                        Binding="{Binding Product.Name}"
                        Header="Nomi" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding ProductType.Type}"
                        ElementStyle="{StaticResource CenterAlignedCellStyle}"
                        Header="Razmer" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding BundleCount, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource RightAlignedCellStyle}"
                        Header="Qop soni" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource RightAlignedCellStyle}"
                        Header="Jami soni" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding UnitPrice, StringFormat={}{0:N2}}"
                        ElementStyle="{StaticResource RightAlignedCellStyle}"
                        Header="Narxi" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Amount, StringFormat={}{0:N2}}"
                        ElementStyle="{StaticResource RightAlignedCellStyle}"
                        Header="Jami summa" />

                    <DataGridTemplateColumn Width="90" Header="Amallar">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="4"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <StackPanel
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                                <!-- EDIT BUTTON -->
                                                <Button
                                                    Width="30"
                                                    Height="26"
                                                    Margin="2,0"
                                                    Padding="0"
                                                    Background="#FFB300"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    FontSize="12"
                                                    ToolTip="Tahrirlash"
                                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                    <md:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                                </Button>
                                                <!-- DELETE BUTTON -->
                                                <Button
                                                    Width="30"
                                                    Height="26"
                                                    Margin="2,0"
                                                    Padding="0"
                                                    Background="#D32F2F"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    FontSize="12"
                                                    ToolTip="O'chirish"
                                                    Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                    <md:PackIcon Kind="Delete" Width="16" Height="16"/>
                                                </Button>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                    </DataGridTemplateColumn>


                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel
            Grid.Row="4"
            Margin="8,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Button
                x:Name="submitButton"
                md:ElevationAssist.Elevation="Dp24"
                Background="{StaticResource SuccessButtonBackground}"
                BorderBrush="{StaticResource SuccessButtonBorder}"
                Command="{Binding SubmitCommand}"
                Content="Yuborish"
                Foreground="{StaticResource SuccessButtonForeground}" />
        </StackPanel>

    </Grid>
</Page>